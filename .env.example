# Multi-Service Architecture Configuration
# This configuration supports all services in the Agentic RAG system

# Service Ports (for browser-host chatbot integration)
PYTHON_API_PORT=8000
GO_API_PORT=8080
JAVA_SERVICES_PORT=8081
RUST_CORE_PORT=8082
REACT_FRONTEND_PORT=3000

# Website Configuration (geniusai.biz)
WEBSITE_PORT=3001
WEBSITE_DOMAIN=geniusai.biz
WEBSITE_URL=https://geniusai.biz

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_STARTER_PRICE_ID=price_starter_monthly
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Email Configuration (for contact forms and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hello@geniusai.biz
SMTP_PASS=your-app-password
SMTP_FROM_NAME=GeniusAI Team
SMTP_FROM_EMAIL=hello@geniusai.biz

# Business Website Database (optional - for storing leads, customers)
WEBSITE_DB_HOST=localhost
WEBSITE_DB_PORT=5432
WEBSITE_DB_NAME=geniusai_website
WEBSITE_DB_USER=postgres
WEBSITE_DB_PASSWORD=password

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Lantern Vector Database Configuration
LANTERN_ENABLED=true
LANTERN_INDEX_TYPE=hnsw
LANTERN_INDEX_M=16
LANTERN_INDEX_EF_CONSTRUCTION=64
LANTERN_INDEX_EF_SEARCH=40
VECTOR_DIMENSIONS=384
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=50

# Alternative Database Providers
PLANETSCALE_HOST=your-planetscale-host
PLANETSCALE_USER=your-username
PLANETSCALE_PASSWORD=your-password
PLANETSCALE_DB=your-database

ARANGO_HOST=localhost
ARANGO_PORT=8529
ARANGO_USER=root
ARANGO_PASSWORD=password
ARANGO_DB=knowledge_graph

# AWS RDS PostgreSQL Configuration (Recommended: PostgreSQL 15.4)
# RDS is fully managed - AWS handles the underlying Linux OS automatically
AWS_RDS_HOST=your-rds-endpoint.region.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_USER=postgres
AWS_RDS_PASSWORD=your-secure-password
AWS_RDS_DB=agentic_rag
AWS_RDS_ENGINE=postgres
AWS_RDS_ENGINE_VERSION=15.4

# RDS Instance Configuration
AWS_RDS_INSTANCE_CLASS=db.t3.medium
AWS_RDS_ALLOCATED_STORAGE=100
AWS_RDS_STORAGE_TYPE=gp2
AWS_RDS_MULTI_AZ=true
AWS_RDS_STORAGE_ENCRYPTED=true
AWS_RDS_BACKUP_RETENTION=7

# Cache & Search
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=

# Message Queue
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=agentic_rag

# AI Services
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# Local Embedding Models (for offline operation)
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_BATCH_SIZE=32

# Application Settings
SECRET_KEY=your-secret-key-here
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# CORS Configuration (for browser-host chatbot)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://geniusai.biz,file://
CORS_ALLOW_CREDENTIALS=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_TIMEOUT=300

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# White-label Integration Settings
INTEGRATION_API_KEY=your-integration-api-key
INTEGRATION_SECRET=your-integration-secret
ALLOWED_DOMAINS=luxonis.com,example.com,customer-domain.com

# Analytics and Tracking (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
HOTJAR_ID=your-hotjar-id

# CDN Configuration (optional)
CDN_URL=https://cdn.geniusai.biz
ASSETS_URL=https://assets.geniusai.biz

# SSL/Security Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
FORCE_HTTPS=true
